			#btn2 {
				width: 300px;
				position: absolute;
				top: 220px;
			}
			div {
				height: 200px;
			}
		</style>
		<script src="jquery-2.0.3.js"></script>
		<script>
			$(document).ready(function(){
				$("button").click(function(){
